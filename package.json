{
  "name": "hackathon-app",
  "type": "module",
  "workspaces": [
    "src/hackathon-spa",
    "tests/e2e"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "check": "npm run check --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "e2e": "node scripts/workspace-command.ts tests/e2e",
    "e2e:docker": "node scripts/e2e-docker.ts",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "spa": "node scripts/workspace-command.ts src/hackathon-spa",
    "sqlfluff": "node scripts/sqlfluff.ts",
    "update-database-docs": "node scripts/update-database-docs.ts",
    "verify": "npm run build && npm run check && npm run lint && npm run spa test && npm run format:check"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.1",
    "@types/node": "24.10.13",
    "npm-run-all2": "8.0.4",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  }
}
